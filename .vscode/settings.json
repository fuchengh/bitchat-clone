{
    "C_Cpp.intelliSenseEngine": "Disabled",
    "clangd.arguments": [
        "--compile-commands-dir=build",
        "--background-index",
        "--clang-tidy"
        "--query-driver=/usr/bin/**/g++,/usr/bin/**/clang++"
    ],
    "clangd.path": "/usr/bin/clangd",
    "files.associations": {
        "*.inc": "cpp"
    },
    "files.watcherExclude": {
        "**/build/**": true
    }
}
